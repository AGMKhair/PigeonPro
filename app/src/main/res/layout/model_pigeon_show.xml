    <androidx.cardview.widget.CardView
    android:layout_margin="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_20sdp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

         <!--
         <ImageView
                android:id="@+id/iv_model_favourite_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="20dp"
                android:src="@drawable/ic_frevarite">
            </ImageView>
        -->


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ivc_model_profile_id"
                android:layout_width="96dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="96dp"
                android:src="@drawable/pegion_profile"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/tv_model_birds_type_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giribaz"
                android:textColor="#FF000000"
                android:fontFamily="sans-serif-condensed">

            </TextView>

            <TextView
                android:id="@+id/tv_model_birds_name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brided name"
                android:fontFamily="sans-serif-condensed">

            </TextView>
<!--

            <TextView
                android:id="@+id/tv_model_rating_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_star"
                android:text="4.5">

            </TextView>

-->

            <Button
                android:id="@+id/btn_model_details_id"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_btn_theme_bg"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="@string/details"
                android:fontFamily="sans-serif-condensed"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/_5sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Result :"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#070707"
                android:textSize="10sp">

            </TextView>
            <TextView
               android:id="@+id/pigeon_recent_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250 km"
                android:textSize="10sp"
                android:textColor="#009688"
                android:fontFamily="sans-serif-condensed">

            </TextView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


