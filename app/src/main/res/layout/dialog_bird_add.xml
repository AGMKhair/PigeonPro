<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <RelativeLayout
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".club_module.AddActivity">

        <LinearLayout
            android:padding="@dimen/_10sdp"
            android:layout_width="@dimen/_398sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_teg_id"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Owner Id : "/>

            <EditText
                android:textAlignment="center"
                android:id="@+id/dialog_et_admin_add_bird_owner_id"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_search_hare"
                android:hint="Enter Birds Owner ID"
                android:paddingLeft="20dp"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Bird teg :"/>

            <TextView
                android:id="@+id/dialog_tv_admin_bird_teg_add_id"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_search_hare"
                android:text="10"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"

                >


            </TextView>

            <CheckBox
                android:id="@+id/dialog_cb_check_id"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text=" To "/>




<LinearLayout
    android:visibility="gone"
    android:id="@+id/dialog_ll_numberPicker_id"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <NumberPicker
        android:layout_margin="@dimen/_5sdp"
        android:id="@+id/numberpicker_count_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <NumberPicker
        android:layout_margin="@dimen/_5sdp"
        android:id="@+id/numberpicker_count_2"        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <NumberPicker
        android:layout_margin="@dimen/_5sdp"
        android:id="@+id/numberpicker_count_3"        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</LinearLayout>




            <Button
                android:id="@+id/btn_admin_bird_add_id"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_admin_btn_bg"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:text="Add"
                android:textColor="@color/colorWhite">

            </Button>

        </LinearLayout>

    </RelativeLayout>

</layout>