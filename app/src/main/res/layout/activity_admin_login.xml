<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E5E5E5"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/club_owner_img"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_100sdp"
            android:background="@drawable/login_img"
            />


        <EditText
            android:id="@+id/et_login_club_owner_usarname_id"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/club_owner_img"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_38sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:background="@drawable/etfield_default"
            android:drawableLeft="@drawable/ic_person_black"
            android:hint="  Username"
            android:inputType="text"
            android:paddingLeft="@dimen/_10sdp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_login_club_owner_password_id"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/et_login_club_owner_usarname_id"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:background="@drawable/etfield_default"
            android:drawableLeft="@drawable/ic_key_black"
            android:hint="  Password"
            android:inputType="textPassword"
            android:maxLength="11"
            android:paddingLeft="@dimen/_10sdp"
            android:textSize="16sp" />


        <Button
            android:id="@+id/btn_club_owner_login_id"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/et_login_club_owner_password_id"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:background="@drawable/shape_btn_bg_admin"
            android:text="Log In"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/c_o_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_club_owner_login_id"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="74dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="56dp"
            android:text="Note : If you are not a club member , please
            send a request to the admin"
            android:textAlignment="center" />


        <Button
            android:id="@+id/btn_club_owner_sendreq_id"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/c_o_text"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/shape_btn_bg_admin"
            android:text="Send request"
            android:textColor="@android:color/white" />


    </RelativeLayout>
</layout>