<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pgon">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit_profile_img_id"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="128dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="128dp"
                android:src="@drawable/kobutor"
                />

        </RelativeLayout>


        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_applyclub__moto_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="0dp"
                android:text="Moto : " />



            <TextView
                android:id="@+id/tv_applyclub_moto_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We shall over comre one day"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_applyclub_name_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="0dp"
                android:text="Club Name : " />



            <TextView
                android:id="@+id/tv_applyclub_name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secure Soft"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_applyclub_location_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="0dp"
                android:text="Location : " />

            <TextView
                android:id="@+id/tv_applyclub_location_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dattapar,Savar,Dhaka"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_applyclb_members_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="0dp"
                android:text="Members : " />



            <TextView
                android:id="@+id/tv_applyclb_members_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_applyclub_est_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="0dp"
                android:text="Establish : " />



            <TextView
                android:id="@+id/tv_applyclub_est_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13/8/2017"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_applyclub_membrship_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="0dp"
                android:text="Membership Cost : " />

            <TextView
                android:id="@+id/tv_applyclub_membrship_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7000/month"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_applyclub_rrecord_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="0dp"
                android:text="Race Record : " />



            <TextView
                android:id="@+id/tv_applyclub_rrecord_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32000hr"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_applyclub_about_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="0dp"
                android:text="About : " />



            <TextView
                android:id="@+id/tv_pegion_club_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. "
                />


        </LinearLayout>

        <Button

            android:id="@+id/btn_applyclub_y_id"

            android:layout_width="332dp"
            android:layout_height="40dp"
            android:layout_marginTop="65dp"
            android:layout_marginStart="42dp"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/shape_btn_bg_design"
            android:text="Apply"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

    </LinearLayout>

</layout>