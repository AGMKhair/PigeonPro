                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Dhaka"
                    android:textColor="@android:color/black"
                    android:textStyle="bold">

                </TextView>
            </LinearLayout>
