                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="City :"
                    android:textColor="@android:color/black"
                    android:textStyle="bold">

                </TextView>

                <TextView
