<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#E5E5E5">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ivc_pigeon_img_id"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="128dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginEnd="128dp"
                    android:src="@drawable/pegion_profile"
                    />

                <TextView
                    android:id="@+id/tv_pegionname_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivc_pigeon_img_id"
                    android:layout_alignParentStart="true"

                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="183dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="184dp"
                    android:text="Giribaz" />


                <TextView
                    android:id="@+id/tv_pegion_loverate_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_pegionname_id"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="173dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="178dp"
                    android:drawableLeft="@drawable/ic_love"
                    android:text="1100" />

                <TextView
                    android:id="@+id/tv_pegion_edit_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"

                    />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="0dp"
                android:text="Distance : " />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_viewpegion_distance_club_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 km club"
                    />
                <TextView
                    android:id="@+id/tv_viewpegion_distance_prsonal_id"
                    android:layout_below="@+id/tv_viewpegion_distance_club_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 km personal"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_margin="25dp">

            <Button
                android:id="@+id/btn_pegion_paydegree_id"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay Degree"
                android:layout_marginRight="5dp"
                android:textColor="#ffff"
                android:textAllCaps="false"
                android:background="@drawable/button_left"/>
            <Button
                android:id="@+id/btn_pegion_history_id"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:layout_marginLeft="5dp"
                android:textColor="#ffff"
                android:textAllCaps="false"
                android:background="@drawable/button_right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_pegion_category_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="0dp"
                android:text="Category : " />



            <TextView
                android:id="@+id/tv_pegion_category_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Racer Pegion"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_pegion_club_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="0dp"
                android:text="Club : " />



            <TextView
                android:id="@+id/tv_pegion_club_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secure Soft"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_pegion_ring_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="0dp"
                android:text="Ring number : " />

            <TextView
                android:id="@+id/tv_pegion_ring_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BAN-12xx-xxx-xxx"
                />


        </LinearLayout>

    </LinearLayout>

