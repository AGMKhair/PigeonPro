<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_pegion_history_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/koitor"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_margin="25dp">

                <Button
                    android:id="@+id/btn_pegion_paydegree_club_history_id"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Club"
                    android:layout_marginRight="5dp"
                    android:textColor="#ffff"
                    android:textAllCaps="false"
                    android:background="@drawable/button_left"/>
                <Button
                    android:id="@+id/btn_pegion_paydegree_personal_history_id"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ffff"
                    android:textAllCaps="false"
                    android:background="@drawable/button_right"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView

                app:cardElevation="0dp"
                android:id="@+id/cv_pegion_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#811B1B"
                android:elevation="20dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="15dp"
                android:padding="20dp">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/tv_pegion_history_event_tag"
                            android:layout_width="219dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_weight="1"
                            android:text="Event"
                            android:textAlignment="textStart"
                            android:textColor="#4E4E4E"
                            android:textSize="12sp"
                            />

                        <TextView
                            android:id="@+id/tv_pegion_history_eventyear_id"
                            android:layout_width="207dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:text="2019"
                            android:textColor="#4E4E4E"
                            android:textSize="12sp"
                            android:textAlignment="textEnd"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/tv_pegionname_history_event_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:text="Name : "
                            android:textColor="#4E4E4E"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_pegionname_history_event_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:layout_marginTop="0dp"
                            android:text="Giribuz"
                            android:textStyle="bold"
                            android:textColor="#4E4E4E"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/tv_pegionposition_history_club_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:text="Position : "
                            android:textColor="#4E4E4E"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_pegionposition_history_club_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/st2.1"
                            android:layout_marginLeft="11dp"
                            android:layout_marginTop="0dp"
                            android:text="1st"
                            android:textStyle="bold"
                            android:textColor="#4E4E4E"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_pegiondistance_history_club_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:text="Distance : "
                            android:textColor="#4E4E4E"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_pegiondistance_history_club_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:layout_marginTop="0dp"
                            android:text="500km"
                            android:textStyle="bold"
                            android:textColor="#4E4E4E"
                            android:textSize="14sp" />
                    </LinearLayout>



                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

</layout>