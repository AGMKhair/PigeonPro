            <LinearLayout
                android:background="@drawable/shape_catagory_design_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout

                    android:paddingTop="30dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">


                    <RelativeLayout

                        android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/activity_main" android:layout_gravity="center_vertical" android:layout_weight="1">

                        <ProgressBar
                            android:background="@drawable/drawable_circle_dark_blue"
                            android:layout_width="115dp"

                            android:layout_height="115dp"
                            android:id="@+id/progressBarCircle_member_id"
                            android:rotation="-90"
                            android:progressDrawable="@drawable/drawable_circle_yellow"
                            android:indeterminate="false"
                            android:layout_centerInParent="true"
                            android:padding="7dp"
                            style="?android:attr/progressBarStyleHorizontal"/>


                        <TextView
                            android:elevation="90dp"
                            android:id="@+id/tv_total_member_list_show_id"
                            android:layout_width="62dp"
                            android:layout_height="61dp"
                            android:layout_alignStart="@+id/progressBarCircle_member_id"
                            android:layout_alignTop="@+id/progressBarCircle_member_id"
                            android:layout_alignEnd="@+id/progressBarCircle_member_id"
                            android:layout_alignBottom="@+id/progressBarCircle_member_id"
                            android:layout_marginStart="27dp"
                            android:layout_marginTop="27dp"
                            android:layout_marginEnd="26dp"
                            android:layout_marginBottom="27dp"
                            android:background="@drawable/shape_circle_shadow"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="80"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp" />

                    </RelativeLayout>


                    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:layout_weight="1">

                        <ProgressBar
                            android:background="@drawable/drawable_circle_dark_blue"
                            android:layout_width="115dp"
                            android:layout_height="115dp"
                            android:id="@+id/progressBarCircle_birds_id"
                            android:rotation="-90"
                            android:progressDrawable="@drawable/drawable_circle_yellow"
                            android:progress="90"
                            android:max="100"
                            android:indeterminate="false"
                            android:layout_centerInParent="true"
                            android:padding="7dp"
                            style="?android:attr/progressBarStyleHorizontal"/>

                        <TextView
                            android:id="@+id/tv_total_birds_list_show_id"
                            android:layout_width="61dp"
                            android:layout_height="61dp"
                            android:layout_alignStart="@+id/progressBarCircle_birds_id"
                            android:layout_alignTop="@+id/progressBarCircle_birds_id"
                            android:layout_alignEnd="@+id/progressBarCircle_birds_id"
                            android:layout_alignBottom="@+id/progressBarCircle_birds_id"
                            android:layout_marginStart="27dp"
                            android:layout_marginTop="27dp"
                            android:layout_marginEnd="27dp"
                            android:layout_marginBottom="27dp"
                            android:gravity="center"
                            android:text="90"
                            android:background="@drawable/shape_circle_shadow"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal" android:layout_height="wrap_content"  >

                    <TextView
                        android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="18dp"
                        android:textColor="@color/colorBlack"
                        android:text="Members"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_below="@+id/progressBarCircle_score_id"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/colorBlack"
                        android:text="Birds"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_below="@+id/progressBarCircle_birds_id"/>

                </LinearLayout>


            </LinearLayout>



