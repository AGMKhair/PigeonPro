<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent">
        <ScrollView
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.cardview.widget.CardView

                android:id="@+id/otp_card2"
                android:layout_width="match_parent"
                android:layout_height="543dp"
                android:layout_alignParentStart="true"

                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="10dp"
                android:background="#811B1B"
                android:elevation="20dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/otp_circle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="65dp"
                        android:layout_marginStart="64dp"
                        android:layout_marginEnd="64dp"
                        android:src="@drawable/otpview2"/>

                    <TextView
                        android:id="@+id/otp_textverify1"
                        android:layout_below="@+id/otp_circle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:layout_centerInParent="true"
                        android:textAlignment="center"
                        android:text="Phone Verification"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:id="@+id/otp_textverify2"
                        android:layout_below="@+id/otp_textverify1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19dp"
                        android:layout_centerInParent="true"
                        android:textAlignment="center"
                        android:text="Nice!! you are so close put the pin before
getting started !"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextGray"/>


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/otp_linearlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/otp_textverify2"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="33dp"
                        android:layout_marginEnd="33dp"
                        android:layout_marginTop="44dp"
                        android:weightSum="6">




                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/otp_verifybox1"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:textAlignment="center"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="1dp"
                                android:background="@drawable/edittext"
                                android:digits="0123456789"
                                android:hint="1"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textColor="#009688"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <View
                                android:id="@+id/view1"

                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:layout_below="@+id/otp_verifybox1"
                                android:layout_marginTop="1dp"
                                android:background="#009688">
                            </View>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/otp_verifybox2"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerInParent="true"
                                android:textAlignment="center"
                                android:layout_marginTop="1dp"
                                android:background="@drawable/edittext"
                                android:digits="0123456789"
                                android:hint="7"
                                android:imeOptions="actionNext"
                                android:inputType="phone"
                                android:maxLength="1"
                                android:textColor="#009688"
                                android:textSize="22sp"
                                android:textStyle="bold" />
                            <View
                                android:layout_width="wrap_content"

                                android:id="@+id/view2"
                                android:background="#009688"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:layout_height="1dp"
                                android:layout_below="@+id/otp_verifybox2"
                                android:layout_marginTop="1dp"
                                >


                            </View></RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/otp_verifybox3"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerInParent="true"
                                android:textAlignment="center"
                                android:layout_marginTop="1dp"
                                android:background="@drawable/edittext"
                                android:digits="0123456789"
                                android:hint="0"
                                android:imeOptions="actionNext"
                                android:inputType="phone"
                                android:maxLength="1"
                                android:textColor="#009688"
                                android:textSize="22sp"
                                android:textStyle="bold" />
                            <View
                                android:layout_width="wrap_content"
                                android:id="@+id/view3"
                                android:background="#009688"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:layout_height="1dp"
                                android:layout_below="@+id/otp_verifybox3"
                                android:layout_marginTop="1dp">
                            </View>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/otp_verifybox4"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/edittext"
                                android:inputType="phone"
                                android:hint="2"
                                android:maxLength="1"
                                android:imeOptions="actionNext"
                                android:digits="0123456789"
                                android:textSize="22sp"
                                android:textAlignment="center"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="1dp"
                                android:textColor="#009688"
                                android:textStyle="bold"
                                />
                            <View
                                android:layout_width="wrap_content"

                                android:id="@+id/view4"
                                android:background="#009688"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:layout_height="1dp"
                                android:layout_below="@+id/otp_verifybox4"
                                android:layout_marginTop="1dp">


                            </View></RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/otp_verifybox5"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerInParent="true"
                                android:textAlignment="center"
                                android:layout_marginTop="1dp"
                                android:background="@drawable/edittext"
                                android:digits="0123456789"
                                android:hint="3"
                                android:imeOptions="actionNext"
                                android:inputType="phone"
                                android:maxLength="1"
                                android:textColor="#009688"
                                android:textSize="22sp"
                                android:textStyle="bold" />
                            <View
                                android:layout_width="wrap_content"
                                android:id="@+id/view5"
                                android:background="#009688"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:layout_height="1dp"
                                android:layout_below="@+id/otp_verifybox5"
                                android:layout_marginTop="1dp">
                            </View>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/otp_verifybox6"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/edittext"
                                android:inputType="phone"
                                android:hint="4"
                                android:maxLength="1"
                                android:imeOptions="actionNext"
                                android:digits="0123456789"
                                android:textSize="22sp"
                                android:textAlignment="center"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="1dp"
                                android:textColor="#009688"
                                android:textStyle="bold"
                                />

                            <View
                                android:layout_width="wrap_content"
                                android:id="@+id/view6"
                                android:background="#009688"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:layout_height="1dp"
                                android:layout_below="@+id/otp_verifybox6"
                                android:layout_marginTop="1dp">

                            </View>

                        </RelativeLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btn_otp_verify_id"
                android:layout_width="332dp"
                android:layout_height="45dp"
                android:padding="10dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="42dp"
                android:layout_marginEnd="42dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/shape_btn_bg_design"
                android:text="Verify"
                android:textColor="@android:color/white"
                />

        </RelativeLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>

