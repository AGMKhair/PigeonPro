        <TextView
            android:layout_above="@+id/et_confirm_club_verification_user_id"
            android:id="@+id/tv_confirm_login_club_user_id"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:text="Select club below"
            android:layout_width="250dp"
            android:background="@drawable/shape_search_hare"
            android:textColor="@color/colorBlack"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

        </TextView>



        <EditText
            android:id="@+id/et_confirm_club_verification_user_id"
            android:layout_marginBottom="20dp"
            android:layout_above="@id/btn_confirm_club_verification_id"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:hint="Enter your club id"
            android:layout_width="250dp"
            android:background="@drawable/shape_search_hare"
            android:textColor="@color/colorBlack"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

        </EditText>


        <Button
            android:id="@+id/btn_confirm_club_verification_id"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_above="@+id/ll_club_search_bg_id"
            android:layout_marginBottom="30dp"
            android:layout_centerInParent="true"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:background="@drawable/shape_btn_theme_bg"
            ></Button>

        <LinearLayout
            android:id="@+id/ll_club_search_bg_id"
            android:background="@drawable/shape_club_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="20dp"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/et_search_club_id"
                android:layout_margin="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/shape_search_club"
                android:drawableRight="@drawable/ic_search"
                android:hint="Search club"
                android:paddingLeft="40dp">

            </EditText>

            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_club" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_club" />

                <de.hdodenhof.circleimageview.CircleImageView

                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_club" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_club" />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_club" />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_club" />


            </LinearLayout>


            <TextView
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip now"/>

        </LinearLayout>




    </RelativeLayout>

</layout>