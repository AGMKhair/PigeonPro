<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <RelativeLayout
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Name "></TextView>

            <EditText
                android:id="@+id/et_admin_add_member_name_id"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_search_hare"
                android:hint="Enter member name"
                android:paddingLeft="20dp">


            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Number"></TextView>




            <EditText
                android:id="@+id/et_admin_add_member_number_id"
                android:digits="0123456789"
                android:maxLength="11"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_search_hare"
                android:hint="Enter member number"
                android:paddingLeft="20dp">


            </EditText>

            <CheckBox
                android:id="@+id/cb_member_check_id"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:text="Already member ?"></CheckBox>


            <Button
                android:id="@+id/btn_add_member_id"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_admin_btn_bg"
                android:paddingLeft="80dp"
                android:paddingRight="80dp"
                android:text="Add"
                android:textColor="@color/colorWhite">

            </Button>
        </LinearLayout>

    </RelativeLayout>
</layout>