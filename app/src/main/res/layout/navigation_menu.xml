        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_25sdp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/company_call"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/_5sdp"

            android:elevation="5dp"
            android:src="@drawable/phone_call" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/company_email"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_weight="1"
            android:elevation="@dimen/_10sdp"
            android:src="@drawable/email" />

        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/company_web"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:elevation="5dp"
            android:src="@drawable/domain" />


    </LinearLayout>
    <TextView
        android:text="@string/follow_us"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:textSize="@dimen/_16sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#0C0C0C"
        android:textFontWeight="400"/>
    <View
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        >

    </View>

    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/menu_follow_us_ll_id"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_20sdp"
        >


        <!--      <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:src="@drawable/menu_icon_contacts_us" />
      -->



            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/youtube_ahsan"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:elevation="5dp"
                android:src="@drawable/utube" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/youtube_ssbd"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_weight="1"
                android:elevation="5dp"
                android:src="@drawable/utube2" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/company_fb"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:elevation="5dp"
                android:src="@drawable/fbook" />
            <!--

                    <ImageView
                        android:id="@+id/company_email"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        android:src="@drawable/email" />

                    <ImageView
