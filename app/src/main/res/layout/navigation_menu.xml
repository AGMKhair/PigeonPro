    <LinearLayout
        android:id="@+id/menu_about_us_ll_id"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_20sdp"
        >

        <ImageView
            android:src="@drawable/menu_apply_club"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="match_parent"
            />

        <TextView
            android:text=""
            android:id="@+id/about_us_id"
            android:textSize="@dimen/_16sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#0C0C0C"/>
    </LinearLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/languageBtn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:checked="true"
        android:padding="@dimen/_4sdp"
        android:textColorHighlight="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textColorLink="@color/colorWhite"
        android:textOff="à¦…"
        android:textOn="A"
        android:textSize="@dimen/_12sdp"
        app:showText="true"
        android:textColor="@color/colorWhite"
        app:thumbTint="@color/colorPrimary">

    </androidx.appcompat.widget.SwitchCompat>

    <LinearLayout
        android:id="@+id/menu_log_out_ll_id"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_20sdp"
        >

        <ImageView
            android:src="@drawable/menu_logout"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="match_parent"
            />

        <TextView
            android:text="@string/log_out"
            android:textSize="@dimen/_16sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#0C0C0C"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_contact_us_ll_id"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_20sdp" >


